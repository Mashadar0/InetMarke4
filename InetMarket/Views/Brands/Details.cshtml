    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">Закрыть</button>
        <h4>Подробно</h4>
    </div>
    <div class="modal-body">
        <div>
            <h4>Марка авто</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>
            </dl>
        </div>
        <div>
            @Html.ActionLink("Изменить", "Edit", new { id = Model.Id }, new { @class = "compItem" }) |
